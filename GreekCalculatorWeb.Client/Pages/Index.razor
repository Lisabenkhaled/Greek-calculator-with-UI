@page "/"

<div class="p-10">

    <!-- Welcome Header -->
    <div class="text-center mb-12">
        <h1 class="text-5xl font-bold tracking-tight text-gray-900 mb-3">
            Greek Calculator
        </h1>
        <p class="text-gray-500 text-xl">
            Une plateforme pour calculer prix & greeks d’options vanilles avec plusieurs modèles financiers
        </p>
    </div>

    <!-- Feature Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mt-10">

        <!-- Pricing -->
        <a href="/pricing"
           class="bg-white/70 backdrop-blur-xl rounded-2xl p-8 shadow-md hover:shadow-xl transition transform hover:-translate-y-1">
            <h2 class="text-2xl font-semibold mb-4"> Option Pricer</h2>
            <p class="text-gray-500">
                Calcule le prix d'une option à partir de plusieurs modèles :
                Black-Scholes, Monte-Carlo, Binomial et LSM Monte Carlo
            </p>
        </a>

        <!-- Greeks -->
        <a href="/greeks"
           class="bg-white/70 backdrop-blur-xl rounded-2xl p-8 shadow-md hover:shadow-xl transition transform hover:-translate-y-1">
            <h2 class="text-2xl font-semibold mb-4"> Greeks Calculator</h2>
            <p class="text-gray-500">
                Obtiens les greeks de premier et second ordre selon deux méthodes
                numériques & analytiques
            </p>
        </a>

    </div>

</div>
